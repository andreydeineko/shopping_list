%div{:id => "comment-#{comment.id}"}
  
  = comment.content

  .comment-options
    -if @item.comments.count == 1
      #{comments.count} comment
    -else
      #{@item.comments.count} comments
    %br
    - if comment.user_id == current_user.id
      = link_to edit_comment_path(comment), id: "edit-comment-#{comment.id}" do
        %i.icon-pencil
      = link_to comment_path(comment), id: "destroy-comment-#{comment.id}", method: 'delete' do
        %i.icon-trash
    - else
      = @comment.upvotes.size
      = link_to comment_like_path(@comment.item), method: :get do
        %i.icon-thumbs-up
      = link_to comment_dislike_path(@comment.item), method: :get do
        %i.icon-thumbs-down
      = 0 - @comment.downvotes.size

