= page_header
#items
  = render @items
.center
  = link_to nil, id: 'new-item-toggler', class: 'btn btn-danger' do
    = icon_label 'icon-plus', t('.new')
#new-item.well.span6
  = simple_form_for @item, remote: true, html: { id: 'new-item', class: 'form-horizontal' } do |form|
    = form.input :name, required: true
    = form.submit t('common.submit'), class: 'btn btn-success', disabled: true, data: { disable_with: t('common.please_wait') }
