#auth-info
  You are logged in as
  %b 
    %u
      = current_user.name
  %p

%center
  %table#items.tablesorter
    %thead
      %tr
        %th
        %th.header= "Name"
        %th.header= "Comments"
        %th.header= "Likes"
        %th.header= "Disikes"
    %tbody
      - @items.each do |item|
        %tr{ :class => "item #{item.category}"}
          %td.narrow
            - if item.user_id == current_user.id
              = link_to edit_item_path(item), id: "edit-item-#{item.id}" do
                %i.icon-pencil
              = link_to item_path(item), id: "destroy-item-#{item.id}", method: 'delete' do
                %i.icon-trash
          %td.name= link_to(item.name, item)
          %td.center= link_to(item.comments.count, item)
          %td.center
            = item.upvotes.size
            = link_to item_like_path(item), method: :get do
              %i.icon-thumbs-up
          %td.center
            = link_to item_dislike_path(item), method: :get do
              %i.icon-thumbs-down
            = 0 - item.downvotes.size
  = will_paginate


%p
.center
  = link_to nil, id: 'new-item-container', class: 'btn btn-danger' do
    = icon_label 'icon-plus', t('authenticated.items.add_item')
#new-item.well.span5
  = simple_form_for @item, html: { class: 'form-horizontal' } do |form|
    = form.input :name, required: true, remote: true, placeholder: t('authenticated.items.item.name.input_placeholder'), input_html: { class: 'span5' }
    = form.input :url, required: false, remote: true, placeholder: t('authenticated.items.item.url.input_placeholder'), input_html: { class: 'span5' }
    .item
      =form.input :category, :as => :select, collection: Item::CATEGORIES, default: "food"
    = form.input :amount, required: true
    %br
    = form.submit t('common.submit'), class: 'btn btn-success', remote: true, data: { disable_with: t('common.please_wait') }
