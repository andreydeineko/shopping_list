!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title Shopping list
    = stylesheet_link_tag :application, :media => "all"
    = csrf_meta_tags

    .share-buttons.share-buttons-tab{"data-buttons" => "twitter,facebook,email,pinterest", "data-counter" => "true", "data-float" => "left", "data-hover" => "true", "data-promo-callout" => "true", "data-style" => "medium"}
    :javascript
      var js = document.createElement('script'); js.type = 'text/javascript'; js.async = true; js.id = 'AddShoppers';
      js.src = ('https:' == document.location.protocol ? 'https://shop.pe/widget/' : 'http://cdn.shop.pe/widget/') + 'widget_async.js#52e62a88a38764027db5147f';
      document.getElementsByTagName("head")[0].appendChild(js);
  %body{"data-action" => action_name.dasherize, :id => controller_path.dasherize.gsub('/', '-')}
    #wrapper
      = render 'header'
      = render 'notifications'
      #main-content.container
        = yield
        #push
  = javascript_include_tag :application

